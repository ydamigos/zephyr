if BOARD_OLIMEXINO_STM32

config BOARD
	default olimexino_stm32

if UART_CONSOLE

config UART_STM32_PORT_1
	default y

endif # UART_CONSOLE

if I2C

config I2C_2
	default y

endif # I2C

if SPI

config SPI_STM32_INTERRUPT
	default y

config SPI_1
	default y

config SPI_2
	default y

endif # SPI

if PWM

config PWM_STM32_1
	default y

endif # PWM

if USB

config USB_DC_STM32_DISCONN_ENABLE
	default y

config USB_DC_STM32_DISCONN_GPIO_PORT_NAME
	default "GPIOC"

config USB_DC_STM32_DISCONN_PIN
	default 12

config USB_DC_STM32_DISCONN_PIN_LEVEL
	default 0

endif # USB

endif # BOARD_OLIMEXINO_STM32
